loopCnt = int(input("층의 개수를 입력하세요."))

for n1 in range(loopCnt):
        for n2 in range(loopCnt-n1-1):
                print(' ', end='')
        for n3 in range((n1+1)*2-1):
                print('*', end='')
        print()

for n4 in range(loopCnt):
        for n5 in range(n4+1):
                print(' ', end='')
        for n6 in range((loopCnt-n4)*2-3):
                print('*', end='')
        print()
